        rsync -av /var/lib/mysql /data/


# Edit the /etc/mysql/my.cnf and change the line
        datadir         = /data/mysql


# Add the following to /etc/apparmor.d/usr.sbin.mysqld

/data/mysql/ r,
/data/mysql/** rwk,

/etc/init.d/apparmor restart</pre></div><div class="clear"></div><div class="footer">Powered by <a href="http://www.sinatrarb.com/">Sinatra</a>,
