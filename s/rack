hello.ru:
  require 'hello'

  use Rack::Reloader
  use Rack::CommonLogger
  use Rack::ShowExceptions
  use Rack::ShowStatus

  run HelloApp.new

run server:
  % rackup hello.ru


== Calling convention

  def call(env)
    [StatusCode, { &quot;Header&quot; =&gt; &quot;Value&quot; }, [&quot;Body&quot;]]
  end</pre></div><div class="clear"></div><div class="footer">Powered by <a href="http://www.sinatrarb.com/">Sinatra</a>,
