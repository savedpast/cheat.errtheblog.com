# Matches HTML content against a CSS 3 selector.
# In Webrat core, Webrat Selenium

assert_have_selector    'div.pagination'
assert_have_no_selector 'form input#name'

assert_have_selector 'img',  :src     =&gt; image_url
assert_have_selector '.cpm', :content =&gt; &quot;$100.00&quot;
assert_have_selector 'li',   :count   =&gt; 2</pre></div><div class="clear"></div><div class="footer">Powered by <a href="http://www.sinatrarb.com/">Sinatra</a>,
